.pagebuy {
    width: 100%;
    height:120rpx;
    display: flex;
    position: fixed;
    bottom:0;
    background:#eee;
}

.title {
    width:100%;
    height:300rpx;
}

.buycart {
    flex:1;
    margin: 15rpx;
    border-radius: 10%;
    background: LightSteelBlue;
    text-align: center;
    line-height: 90rpx;
}

.openpanel{
    position: fixed;
    bottom:0;
    height:400rpx;
    width:100%;
    background:#eee;
    border: 1rpx solid #ccc;
}

.close{
    width:30rpx;
    height:30rpx;
    border:1px solid #000;
    float:right;
    margin:10rpx 10rpx 0 0;
    text-align: center;
    background:#000;
}

